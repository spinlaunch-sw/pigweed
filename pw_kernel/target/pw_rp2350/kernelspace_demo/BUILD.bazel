load("@rules_rust//rust:defs.bzl", "rust_binary")
load("//pw_kernel/target/pw_rp2350:defs.bzl", "TARGET_COMPATIBLE_WITH")
load("//pw_kernel/tooling:system_image.bzl", "system_image", "system_image_test")
load("//pw_kernel/tooling:target_linker_script.bzl", "target_linker_script")

system_image(
    name = "kernelspace_demo",
    kernel = ":target",
    platform = "//pw_kernel/target/pw_rp2350",
    system_config = ":system_config",
    tags = ["kernel"],
)

system_image_test(
    name = "kernelspace_demo_test",
    image = ":kernelspace_demo",
    target_compatible_with = TARGET_COMPATIBLE_WITH,
)

filegroup(
    name = "system_config",
    srcs = ["system.json5"],
)

target_linker_script(
    name = "linker_script",
    system_config = ":system_config",
    tags = ["kernel"],
    target_compatible_with = TARGET_COMPATIBLE_WITH,
    template = "//pw_kernel/target/pw_rp2350:linker_script_template",
)

rust_binary(
    name = "target",
    srcs = [
        "target.rs",
    ],
    edition = "2024",
    tags = ["kernel"],
    target_compatible_with = TARGET_COMPATIBLE_WITH,
    deps = [
        ":linker_script",
        "//pw_kernel/apps/kernelspace_demo:demo",
        "//pw_kernel/arch/arm_cortex_m:arch_arm_cortex_m",
        "//pw_kernel/kernel",
        "//pw_kernel/subsys/console:console_backend",
        "//pw_kernel/target:target_common",
        "//pw_kernel/target/pw_rp2350:entry",
        "//pw_log/rust:pw_log",
    ],
)
