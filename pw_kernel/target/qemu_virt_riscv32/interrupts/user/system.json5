{
    arch: {
        type: "riscv",
    },
    kernel: {
        flash_start_address: 0x80000000,
        flash_size_bytes: 261120,        // 255Kb
        ram_start_address: 0x81000000,
        ram_size_bytes: 65536,           // 64Kb
    },
    apps: [
        {
            name: "interrupts",
            flash_size_bytes: 261120, // 255Kb
            ram_size_bytes: 65536,    // 64Kb
            process: {
                name: "interrupt process",
                objects: [
                    {
                        name: "IPC",
                        type: "channel_handler",
                    },
                ],
                memory_mappings: [
                    {
                        name: "UART0",
                        type: "device",
                        start_address: 0x10000000,
                        size_bytes: 0x2000,
                    }
                ],
                threads: [
                    {
                        name: "interrupt thread",
                        stack_size_bytes: 1024,
                    },
                ],
            },
        },
        {
            name: "uart_listener",
            flash_size_bytes: 261120, // 255Kb
            ram_size_bytes: 65536,    // 64Kb
            process: {
                name: "uart listener process",
                objects: [
                    {
                        name: "UART_INTERRUPTS",
                        type: "interrupt",
                        irqs: [
                            {
                                name: "UART0",
                                number: 10
                            }
                        ],
                    },
                    {
                        name: "IPC",
                        type: "channel_initiator",
                        handler_app: "interrupts",
                        handler_object_name: "IPC",
                    },
                ],
                memory_mappings: [
                    {
                        name: "UART0",
                        type: "device",
                        start_address: 0x10000000,
                        size_bytes: 0x2000,
                    }
                ],
                threads: [
                    {
                        name: "uart listener thread",
                        stack_size_bytes: 1024,
                    },
                ],
            },
        },
    ],
}
