package {
    default_applicable_licenses: ["external_pigweed_license"],
}

// Expose pw_cpu_exception_cortex_m_protos/cpu_state.proto
filegroup {
    name: "pw_cpu_exception_cortex_m_protos",
    srcs: [
        "pw_cpu_exception_cortex_m_protos/cpu_state.proto",
    ],
}

genrule {
    name: "pw_cpu_exception_cortex_m_pwpb_proto_header",
    defaults: ["pw_rpc_generate_pwpb_header_with_prefix_and_protobuf"],
    srcs: [
        ":pw_cpu_exception_cortex_m_protos",
    ],
    out: ["pw_cpu_exception_cortex_m_protos/cpu_state.pwpb.h"],
}

genrule {
    name: "pw_cpu_exception_cortex_m_pwpb_rpc_header",
    defaults: ["pw_rpc_generate_rpc_pwpb_header_with_prefix_and_protobuf"],
    srcs: [
        ":pw_cpu_exception_cortex_m_protos",
    ],
    out: [
        "pw_cpu_exception_cortex_m_protos/cpu_state.rpc.pwpb.h",
    ],
}
